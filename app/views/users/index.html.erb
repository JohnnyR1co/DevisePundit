<h1>All Users</h1>
<table class="table">
  <tr>
    <th>Email</th>
    <th>Role</th>
    <th colspan='2'></th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
        <%= form_for(user) do |f| %>
          <td><%= f.select(:role, User.roles.keys) %></td>
          <td><%= f.submit 'Change Role', class: 'btn btn-primary button-xs' %>
        <% end %>
        <%= link_to 'Destroy', users_path,
            method: :delete,
            data: { confirm: 'Are you sure?' },
            class: 'btn btn-primary button-xs' %>
          </td>
    </tr>
  <% end %>

</table>
